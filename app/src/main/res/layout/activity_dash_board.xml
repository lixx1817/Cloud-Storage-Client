<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".dashBoard"
    android:background="@drawable/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Account"
        android:id="@+id/addService_Btn"
        android:layout_marginTop="97dp"
        android:layout_alignRight="@+id/editService_Btn"
        android:layout_alignEnd="@+id/editService_Btn"
        android:layout_alignLeft="@+id/editService_Btn"
        android:layout_alignStart="@+id/editService_Btn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Service Account"
        android:id="@+id/editService_Btn"
        android:layout_below="@+id/addService_Btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual Sync"
        android:id="@+id/manualSync_Btn"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/editService_Btn"
        android:layout_alignLeft="@+id/editService_Btn"
        android:layout_alignStart="@+id/editService_Btn"
        android:layout_alignRight="@+id/editService_Btn"
        android:layout_alignEnd="@+id/editService_Btn" />

</RelativeLayout>
